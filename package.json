{
  "name": "wellserv-workspace",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "pnpm --filter web dev",
    "dev:mobile": "cd apps/mobile && pnpm expo start --clear",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "prepare": "husky install",
    "apply-patches": "node scripts/apply-patches.js",
    "postinstall": "pnpm run apply-patches"
  },
  "devDependencies": {
    "@types/react": "~19.1.10",
    "eslint": "8.57.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "turbo": "^2.1.1",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --max-warnings=0 --no-warn-ignored"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "eslint": "8.57.0"
    }
  },
  "dependencies": {
    "expo": "^54.0.25"
  }
}
