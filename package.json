{
  "name": "wellserv-workspace",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "pnpm --filter web dev",
    "dev:mobile": "pnpm --filter mobile expo start --clear",
    "build": "turbo build",
    "lint": "turbo lint && pnpm check:mobile-phi",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "prepare": "husky install",
    "apply-patches": "node scripts/apply-patches.js",
    "check:mobile-phi": "node scripts/check-mobile-phi.js",
    "postinstall": "pnpm run apply-patches"
  },
  "devDependencies": {
    "@types/react": "~19.1.10",
    "eslint": "8.57.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "turbo": "^2.1.1",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --max-warnings=0 --no-warn-ignored"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "@expo/cli": "54.0.20",
      "@expo/config-plugins": "54.0.4",
      "@expo/metro-runtime": "6.1.2",
      "eslint": "8.57.0",
      "expo": "54.0.31",
      "expo-constants": "18.0.13",
      "expo-dev-client": "6.0.20",
      "expo-dev-launcher": "6.0.20",
      "expo-dev-menu": "7.0.18",
      "expo-modules-core": "3.0.29",
      "expo-router": "6.0.21",
      "expo-updates": "29.0.15"
    }
  }
}
